	var app = app || {};

	app.data = [{
		id: 1,
		thing: 'I need to do laundry',
		date: '8/19/2015'
	},{
		id: 2,
		thing: 'I need to anger-pee on stuff',
		date: '8/24/2015'
	},{
		id: 3,
		thing: 'I wanna ride my Moooooooturcycle',
		date: '8/22/2015'
	},{
		id: 4,
		thing: 'Your mom is coming over, OH SHIT SON',
		date: '8/23/2015'
	},{
		id: 5,
		thing: 'Did somebody say "nacho fight"?!',
		date: '8/21/2015'
	},{
		id: 6,
		thing: 'WHO DAT WHO DAT WHO DAT WHO DAT',
		date: '8/15/2015'
	}];

	app.todoItemView = Backbone.View.extend({
		render: function(dataObject) {
			this.template = _.template( $('#list-template').html() );
			
			var compiledTemplate = this.template(dataObject);

			this.$el.append(
				
				compiledTemplate
			
			);
		}
	});
	
	$(document).on('ready', function() {

		for (var i = 0; i < app.data.length; i++) {
			new app.todoItemView({el: '#list' }).render(app.data[i]);
		}

	});

</script>

<script type="text/template" id="list-template">
	<li>
		#<%%= id %>
		<em><%%= thing %></em>;
		<strong>Due by: </strong><%%= date %>
	</li>
</script>